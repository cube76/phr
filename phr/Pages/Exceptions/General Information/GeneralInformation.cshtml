@page
@model phr.Pages.Exceptions.General_Information.GeneralInformationModel
@{
	ViewData["Title"] = "General Information";
}
<div class="container p-2 d-flex align-items-end flex-column vh-100">
	<div class="col-12 py-2 border-bottom">
		<h4><strong>General Information</strong></h4>
	</div>
	<div class="col-12">
		<div class="list-group mt-2">
			<form id="genInfo" method="post" asp-page="/Exceptions/General Information/GeneralInfo">
				<input type="hidden" name="wellLastInfo" value='@ViewData["WellLastInfo"]' />
				<a onclick="document.getElementById('genInfo').submit();" class="list-group-item list-group-item-action cursor-pointer">
					<div class="d-flex">
						<div class="p-2 rounded-circle icon-container justify-content-center align-self-center">
							<i class="bi bi-info-circle icon"></i>
						</div>
						<div class="p-2">General Info</div>
						<div class="p-2 ms-auto"><i class="bi bi-chevron-right" style="color: #CED4DA"></i></div>
					</div>
				</a>
			</form>
			<form id="Welldown" method="post" asp-page="/Exceptions/General Information/WelldownInfo">
				<input type="hidden" name="wellLastInfo" value='@ViewData["WellLastInfo"]' />
				<a onclick="document.getElementById('Welldown').submit();" class="list-group-item list-group-item-action cursor-pointer">
					<div class="d-flex">
						<div class="p-2 rounded-circle icon-container justify-content-center align-self-center">
							<i class="bi bi-graph-up icon"></i>
						</div>
						<div class="p-2">Welldown Info</div>
						<div class="p-2 ms-auto"><i class="bi bi-chevron-right" style="color: #CED4DA"></i></div>
					</div>
				</a>
			</form>
			<form id="PumpInfo" method="post" asp-page="/Exceptions/General Information/PumpInfo">
				<input type="hidden" name="wellLastInfo" value='@ViewData["WellLastInfo"]' />
				<a onclick="document.getElementById('PumpInfo').submit();" class="list-group-item list-group-item-action cursor-pointer">
					<div class="d-flex">
						<div class="p-2 rounded-circle icon-container justify-content-center align-self-center">
							<i class="bi bi-box-arrow-up-right icon"></i>
						</div>
						<div class="p-2">Pump Info</div>
						<div class="p-2 ms-auto"><i class="bi bi-chevron-right" style="color: #CED4DA"></i></div>
					</div>
				</a>
			</form>
			<form id="Wellbore" method="post" asp-page="/Exceptions/General Information/Wellbore Info">
				<input type="hidden" name="wellLastInfo" value='@ViewData["WellLastInfo"]' />
				<a onclick="document.getElementById('Wellbore').submit();" class="list-group-item list-group-item-action cursor-pointer">
					<div class="d-flex">
						<div class="p-2 rounded-circle d-flex align-items-center align-self-center" style="height: 32px; background-color: #F0F8FE;">
							<i class="bi bi-box-seam" style="color: #3083DC"></i>
						</div>
						<div class="p-2">Wellbore Info</div>
						<div class="p-2 ms-auto"><i class="bi bi-chevron-right" style="color: #CED4DA"></i></div>
					</div>
				</a>
			</form>
		</div>
	</div>
	<div class="col-12">
		<div class="d-flex justify-content-between mt-4">
			<h6>Last well test date</h6>
			<h6><strong>@Model.WellLastInfo.WtDate?.ToString("dd MMM yyyy")</strong></h6>
		</div>
	</div>

	<div class="card col-12 mb-3">
		<div class="card-body">
			<div class="d-flex flex-row mb-2">
				<div class="p-2 bg-green rounded-circle align-self-center" style="height: 16px"></div>
				<div class="p-2">Fluid Performance</div>
			</div>
			<div><strong>2.25% (@Model.WellLastInfo.WtBfpd BFPD)</strong></div>
			<div class="d-flex flex-row mt-2">
				<div class="pe-2">Last</div>
				<div class=""><strong>@(Model.WellLastInfo.TheorBfpd ?? 0)</strong></div>
			</div>
			<div class="progress mb-2" style="height: 40px;">
				<div class="progress-bar bg-blue-progress" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">
				</div>
			</div>
			<div class="d-flex flex-row">
				<div class="pe-2">Avg</div>
				<div class=""><strong>@Model.WellLastInfo.AvgWtBfpd3Mo</strong></div>
			</div>
			<div class="progress mb-2" style="height: 40px;">
				<div class="progress-bar bg-gray-progress" role="progressbar" style="width: 30%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">
				</div>
			</div>
		</div>
	</div>

	<div class="card col-12 mb-3">
