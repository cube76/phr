@page
@model phr.Pages.Exceptions.WorkoverHistoryModel
@{
	ViewData["Title"] = "Workover History";
}
<link href="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.0.0/dist/css/datepicker.min.css" rel="stylesheet">

<div class="container p-2 d-flex align-items-end flex-column vh-100">
	<div class="col-12 py-2 border-bottom">
		<h4><strong>Workover History</strong></h4>
	</div>
	<div class="col-12 pt-4 mt-4 border-top">
		<div class="input-group">
			<span class="input-group-text" id="basic-addon1"><i class="bi bi-search"></i></span>
			<input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon1" id="searchInput">
		</div>
	</div>
	<div class="col-12 my-2">
		<select class="form-select">
			<option selected>Start Date</option>
			<option value="1">2024</option>
			<option value="2">2023</option>
			<option value="3">2022</option>
		</select>
	</div>
	<div class="col-12">
		<div class="accordion accordion-flush" id="accordionFlushExample">
			@for (int i = 0; i < 7; i++)
			{
				<div class="accordion-item">
					<h2 class="accordion-header">
						<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-@i" aria-expanded="false" aria-controls="flush-collapseOne">
							07-Nov-2023
						</button>
					</h2>
					<div id="flush-collapse-@i" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
						<div class="accordion-body">
							<div class="d-flex flex-column">
								<div class="d-flex justify-content-between border-bottom pb-3">
									<div class=""><strong>End Date</strong></div>
									<div class="">10-Nov-2023</div>
								</div>
								<div class="d-flex justify-content-between border-bottom py-3">
									<div class=""><strong>Job Status</strong></div>
									<div class="">Complete</div>
								</div>
								<div class="d-flex justify-content-between border-bottom py-3">
									<div class=""><strong>Job Code</strong></div>
									<div class="">PMP14</div>
								</div>
								<div class="d-flex justify-content-between border-bottom py-3">
									<div class=""><strong>Job Description</strong></div>
									<div class="">Change Pump Type Normal</div>
								</div>
								<div class="d-flex justify-content-between border-bottom py-3">
									<div class=""><strong>Remark</strong></div>
									<div class="">R/D Complete BE</div>
								</div>
								<div class="d-flex justify-content-between border-bottom py-3">
									<div class=""><strong>Submitted By</strong></div>
									<div class="">MK.SYAFRINA.PUTRI</div>
								</div>
								<div class="d-flex justify-content-between border-bottom py-3">
									<div class=""><strong>Job Category</strong></div>
									<div class="">Major Rig Work Over (MRWO)</div>
								</div>
								<div class="d-flex justify-content-between border-bottom py-3">
									<div class=""><strong>Rig Code</strong></div>
									<div class="">ARJ-11</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.0.0/dist/datepicker.min.js"></script>

<script>

	// Initialize the datepicker

	const datepicker = new Datepicker(document.getElementById('datepicker'), {

		// Options can be added here

		format: 'dd/mm/yyyy', // Set the date format

		autohide: true // Automatically hide the datepicker after selecting a date

	});
	document.getElementById('datepicker-icon').addEventListener('click', function() {

		datepicker.show();

	});

</script>
